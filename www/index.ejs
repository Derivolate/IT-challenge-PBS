<!DOCTYPE html>
<html>
    <% include partials/head %>

    <body id="background-pr">
    
        <% include partials/header %>

        <% include partials/sidebar %>
	
        <div class="body">
            <button type="button" class="pr" id="pr" onclick="changeIDpr()">Projects</button>
            <button type="button" class="pr" id="rc" onclick="changeIDrc()">Resources</button>
            <br/>
            <form action="">
                <input id="m" type="text" oninput="update()" autocomplete="off" />
                <button id="search">
                    <img src="images/search.svg" />
                </button>
                <button id="filtr">
                    <img src="images/filter.svg" />
                </button>
            </form>
            <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
            <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
            <script>
                var socket = io();

                function update() {
                    var query = $('#m').val();
                    if (query) {
                        socket.emit('zoek', query);
                    } else {
                        $('#suggestions').empty();
                    }
                }
                $('form').submit(function() {
                    socket.emit('zoek', $('#m').val());
                    $('#m').val('');
                    return false;
                });
                socket.on('zoek', function(msg) {
                    var reslist = $('#suggestions');
                    reslist.empty();
                    var item = 0;
                    for (item in msg) {
                        if (item >= 10) {
                            break;
                        }
                        reslist.append($('<button type="button" id="suggestion" class="pr">').text(msg[item].job));
                    }
                    reslist.append($('<tr>').text(msg.length + " records in totaal"));
                });
            </script>
            <table id="suggestions" />
            <br/>
            <button type="button" class="pr">Aantal records</button>
        </div>
        <div class="bottom">
            <div class="container">
            </div>
        </div>
    </body>
</html>
