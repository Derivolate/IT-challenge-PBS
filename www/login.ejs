<!DOCTYPE html>
<html>
    <% include partials/head %>

    <body id="background-pr">
    
        <% include partials/header %>

        <% include partials/sidebar %>
	
        <div class="body">
            <table>
                <tr>
                <td>Log hier in met uw gebruikersnaam en wachtwoord</td></tr>
                <tr>
                    <td>Gebruikersnaam:</td>
                    <td><input type="text" id="username"></td>
                </tr>
                <tr>
                    <td>Wachtwoord:</td>
                    <td><input type="text" id="password"></td>
                </tr>
                <tr>
                    <td>
                        <button id="loginbtn" onclick="onLogin()">Log in</button>
                    </td>
                    <td>
                        <button id="wwverg">Wachtwoord vergeten</button>
                    </td>
                    <td>
                </tr>
                <tr>
                    <td>
                        Nog geen account?
                        <form action="register" class =>
                            <input type="submit" value="Registreren">
                        </form>
                    </td>
                </tr>
            </table>
			<script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
            <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
            <script>
                var socket = io();

                function onLogin(){
					var credentials = {username:$('#username').val(), password:$('#password').val()};
					socket.emit('login', credentials);
                }
				
                socket.on('login', function(userId) {
					sessionStorage.setItem("userId", userId);
					updateBtnText(true);
                });
				socket.on('validate', function(sessionId){
					sessionStorage.setItem("sessionId", sessionId);
				});
            </script>
        </div>
        <div class="bottom">
            <div class="container">
            </div>
        </div>
    </body>
</html>
